<h1>Listing bookings</h1>

<table>
  <tr>
    <th>User</th>
    <th>Room</th>
    <th>Slots</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <td><%= User.find(booking.user_id).name %></td>
    <td><%= Room.find(booking.room_id).name %></td>
    <td><%= booking.slots %></td>
    <td><%= booking.date %></td>
    <td><%= link_to 'Show', booking %></td>
    <td><%= link_to 'Destroy', booking, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

